<h2><%= @event.name %></h2>
<p><%= @event.description %></p>
<p><%= @event.date %></p>
<% if @event.attendees.any? %>
  <h3>Attendees:</h3>
  <ul>
    <% @event.attendees.each do |attendee| %>
      <li><%= attendee.email %> - <%= link_to "Show User", user_url(attendee) %> - <%= link_to "Remove", event_attendee_url(@event, user_id: attendee.id), data: {turbo_method: :delete} %></li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Attend Event", event_attendee_url(event_id: @event.id), data: { turbo_method: :patch } %>
<%= link_to "Edit Event", edit_event_url(@event) %>
<%= link_to "Delete Event", event_url(@event), data: { turbo_method: :delete } %>
