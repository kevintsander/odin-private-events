<nav class="user-nav">
  <% if user_signed_in? %>
    <span class="user-intro">Hi, <%= current_user.email %></span>
    <%= link_to "My Events", user_path(current_user), class: "link-button" %>
    <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "link-button" %>
  <% else %>
    <%= link_to "Sign Up", new_user_registration_path, class: "link-button" %>
    <%= link_to "Log In", new_user_session_path, class: "link-button" %>
  <% end %>
</nav>
